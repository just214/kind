{
  "name": "kind",
  "private": false,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepub": "lerna run typecheck && lerna run lint && lerna run test && lerna run build",
    "storybook": "lerna run storybook",
    "publish": "npm run prepub && lerna publish",
    "test": "lerna run test",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "build": "lerna run build",
    "publish:canary": "lerna publish --canary",
    "update:deps": "ncu -u --deep"
