  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-lerna-scopes": "^17.6.3",
    "husky": "^8.0.3",
    "npm-check-updates": "^16.10.10",
    "lerna": "^6.6.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-lerna-scopes"
    ]
  },
