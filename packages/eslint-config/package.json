{
  "name": "eslint-config",
  "version": "1.0.0",
  "description": "ESLint configuration for React/TypeScript projects.",
  "author": "just214",
  "main": "index.js",
  "scripts": {
    "build": "echo 'No build step required.'",
    "format": "prettier --write *.js",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "test": "vitest",
    "prerelease": "npm run test && npm run format",
    "release": "npm run prerelease && np --no-2fa"
  },
  "devDependencies": {
    "eslint": "^8.39.0",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4",
    "vitest": "^0.31.0"
  },
  "dependencies": {
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-functional": "^5.0.8",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-rulesdir": "^0.2.2",
    "eslint-plugin-standard": "^4.1.0"
  },
  "peerDependencies": {
    "eslint": "^7 || ^8",
    "prettier": ">=2.4.1",
    "typescript": ">=4.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/just214/kind.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/@just214"
  }
}